<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Electronic Medical Record</title>
  <meta charset="utf-8">
  <title>Home Page</title>
    <link rel="stylesheet" href="/css/index-style.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" type="image/x-icon" href="/images/favicon.ico">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Rubik&display=swap" rel="stylesheet">
    
    <!--Bootstrap 5-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
  
</head>

<body>
  <div class="fixed">
      <!-- HEADER PARTIAL -->
      <div id="top-nav-bar" style="z-index: 9">
          <a id="emr" href="home.html">Electronic Medical Record</a>
          <ul id="top-nav">
              <form action="/searchPatients" method="POST" id="searchbar">
                  <input type="text" placeholder="Search..." name="search" id="search">
                  <button type="submit" id="search-button"><i class="fa fa-search"></i></button>
              </form>
          </ul>
      </div>
      <!-- END HEADER PARTIAL -->
  </div>

  <div id="page">
      <div id="patients">
        <!--INSERT FOR LOOP TO GENERATE LETTERS OF ALPHABET-->
        <!--I'll put a sample for A-->
          <!--INSERT NESTED LOOP TO GENERATE THE PATIENTS UNDER THE LETTER-->
          <!--PATIENT PARTIAL-->
          <!-- For Loop to Print A-Z -->
          <% for (var i =65; i <=90;  i++ ) { %>
            <br/>  <%= String.fromCharCode(i) %> 

            <!-- For Loop to Print Patients -->
            <% for (let record of records) { %>
              <% if(record?.lastName?.charAt(0) == String.fromCharCode(i)){ %>
                <div class="patient-instance checkup"> <!--class changes depending on the latest consult-->
                  <a href="patient/<%= record._id %>.ejs" class="name">
                  <!--lastName, firstName middleName(just the initial).-->
                    <%= record.lastName %>, <%= record.firstName %>, <%= record.middleName.charAt(0) %>.
                    <div class="age">
                      <p class="age" id="age">Age: 21</p>
                    </div>
                  </a>
                </div>      
              <% } %>  
            <% } %>
          <% } %>

                  
          <!--END PATIENT PARTIAL-->
      </div>
      <div id="legend">
          <div class="fixed">
              Legend
              <ul id="list">
                  <li><div class="dot" id="surgical"></div>Surgical</li>
                  <li><div class="dot" id="medical"></div>Purely Medical</li>
                  <li><div class="dot" id="checkup"></div>Checkup</li>
              </ul>
          </div>
      </div>
  </div>

  <!-- JS Script -->
  <script type="text/javascript" src="/js/home.js"></script>
</body>
</html>


 